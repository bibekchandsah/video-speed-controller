{
  "manifest_version": 3,
  "name": "Video Speed Controller",
  "version": "1.0.0",
  "description": "Enhanced video playback speed control with keyboard shortcuts, visual feedback, and persistent settings",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Video Speed Controller Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "author": "Bibek (Bibek Chand Sah)",
  "homepage_url": "https://github.com/bibekchandsah/video-speed-controller"
}